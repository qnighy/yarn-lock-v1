{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "checkJs": true,
    "rootDir": ".",
    "composite": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist"],
  "include": ["**/*", ".babelrc.js", ".eslintrc.js"]
}
